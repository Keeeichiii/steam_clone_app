<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="create_table_user_wallets" author="steam-clone">
        <comment>Создание таблицы кошельков пользователей</comment>
        
        <createTable tableName="user_wallets">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="decimal(15,5)" defaultValue="0.00">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="user_wallets"
                baseColumnNames="user_id"
                constraintName="fk_user_wallets_user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>

        <rollback>
            <dropTable tableName="user_wallets"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

