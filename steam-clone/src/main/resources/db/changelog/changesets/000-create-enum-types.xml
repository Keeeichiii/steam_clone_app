<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="create_enum_types" author="steam-clone">
        <comment>Создание перечисления</comment>
        
        <sql>
            CREATE TYPE user_friend_status AS ENUM ('pending', 'accepted', 'rejected');
        </sql>
        
        <sql>
            CREATE TYPE transaction_type_enum AS ENUM ('purchase', 'refund', 'replenishment');
        </sql>

        <rollback>
            <sql>DROP TYPE IF EXISTS user_friend_status;</sql>
            <sql>DROP TYPE IF EXISTS transaction_type_enum;</sql>
        </rollback>
    </changeSet>

</databaseChangeLog>

